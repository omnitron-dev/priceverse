{
  "name": "priceverse",
  "version": "0.3.0",
  "description": "Titan-based cryptocurrency price aggregation platform with PM architecture",
  "type": "module",
  "main": "dist/main.js",
  "types": "dist/main.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "dev": "tsx watch src/main.ts",
    "start": "node dist/main.js",
    "start:prod": "NODE_ENV=production node dist/main.js",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:unit": "vitest run test/unit",
    "test:e2e": "vitest run test/e2e",
    "test:watch": "vitest",
    "test:cov": "vitest run --coverage",
    "lint": "eslint src/**/*.ts",
    "migrate": "tsx src/database/migrate.ts",
    "migrate:down": "tsx src/database/migrate.ts --down",
    "client": "tsx src/client.ts",
    "client:dashboard": "tsx src/client.ts --dashboard"
  },
  "dependencies": {
    "@omnitron-dev/titan": "^0.4.3",
    "@xec-sh/kit": "^0.8.3",
    "better-sqlite3": "^12.5.0",
    "ioredis": "^5.8.2",
    "kysely": "^0.28.8",
    "pg": "^8.16.3",
    "uuid": "^13.0.0",
    "ws": "^8.18.3",
    "xml2js": "^0.6.2",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/node": "^25.0.2",
    "@types/pg": "^8.16.0",
    "@types/ws": "^8.18.1",
    "@types/xml2js": "^0.4.14",
    "@vitest/coverage-v8": "^4.0.15",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}